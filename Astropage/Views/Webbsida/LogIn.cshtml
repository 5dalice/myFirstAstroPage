@model astro
@{
    Layout = "~/Views/Shared/minMall.cshtml";
}

<main class="form-signin custom-width m-auto">
    <form asp-action="inloggad" asp-route-returnurl="@ViewBag.ReturnUrl">
        <form class="text-center">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" id="floatingInput" placeholder="name@example.com" />
                <label for="floatingInput">Användarnamn</label>
            </div>
            <div class="form-floating">
                <input type="password" asp-for="Id" class="form-control" id="floatingPassword" placeholder="Password" />
                <label for="floatingPassword">Lösenord</label>
            </div>
            <button type="submit" class="btn btn-primary w-60 py-2">Logga in</button>
        </form>

    </form>

    <p>
        @ViewBag.ErrorMessage
    </p>


</main>
<!--Footer -->
<div class="container">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap" /></svg>
            </a>
            <span class="mb-3 mb-md-0 text-body-secondary">&copy; 2023 Alice Astrology, Inc</span>
        </div>
    </footer>
</div>

