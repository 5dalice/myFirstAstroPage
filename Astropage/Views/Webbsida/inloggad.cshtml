@model astro
@{
    Layout = "~/Views/Shared/minMall.cshtml";
}
<link href="~/css/minStil.css" rel="stylesheet" />


<main class="container">

    <div class="content-view">
        <div class="read-more-content">

            <h3>This is a page only accessible when logged in as an admin. Add a new admin below.</h3>
            <form asp-action="LäggaTill" method="post">
                <div class="col-md-7 col-lg-8 mx-auto">
                    <div class="row g-3">
                        <div class="col-md-7 col-lg-8 mx-auto">
                            <label asp-for="Name" class="form-label text-black">New admin:</label>
                            <input asp-for="Name" class="form-control" placeholder="New admin name" required>
                        </div>
                    </div>

                    <div class="col-md-7 col-lg-8 mx-auto">
                        <label asp-for="Date" class="form-label text-black">Password:</label>
                        <input asp-for="Date" class="form-control" placeholder="Password" required>
                    </div>

                    <div class="col-md-7 col-lg-8 mx-auto">
                        <label asp-for="Date" class="form-label text-black">Confirm password:</label>
                        <input asp-for="Date" class="form-control" placeholder="Password" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Lägg till</button>
                </div>
            </form>



        </div>
    </div>
</main>


<!--Footer -->
<div class="container">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap" /></svg>
            </a>
            <span class="mb-3 mb-md-0 text-body-secondary">&copy; 2023 Alice Astrology, Inc</span>
        </div>
    </footer>
</div>


